#include "main.h"
/**
 * strlen_recursion - returns the length of a string
 * @s: string we need to find the length of.
 * Return: How long is the string?
 */
int _strlen_recursion(char *s)
{
  int num;
  if (*s == '\0')
    {
      num = *s;
      return (num);
    }
  if (*s)
    {
      _strlen_recursion(s + 1);
    }
  return (0);
}
